<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title></title>
  </head>
  <body>
    <div class="container z-depth-2 my-2 px-0">

      <!--Section: Content-->
      <section class="my-md-1"
        style="background-image: url('/images/contacts_dark.jpg'); background-size: cover; background-position: center center;">

        <div class="rgba-black-strong rounded p-4">

          <!-- Section heading -->

          <form class="mx-md-5" action="" method="post">

            <div class="row">
              <div class="col-md-6 mb-4">

                <div class="card">
                  <div class="card-body px-4">

                    <!-- Name -->
                    <div class="md-form md-outline mt-0">
                      <input id="name" name="contact[name]" type="text" placeholder="Your name" class="form-control" value="<%= @d.name %>">
                      <label for="name">Your Name</label>
                    </div>
                    <!-- Email -->
                    <div class="md-form md-outline">
                      <input id="email" name="contact[email]" type="text" placeholder="Your email" class="form-control"  value="<%= @d.email %>">
                      <label for="email">Your Email Address</label>
                    </div>
                    <!-- Message -->
                    <div class="md-form md-outline">
                      <textarea maxlength="300" class="form-control" id="message" name="contact[message]" placeholder="Please enter your message here...(max 300 characters)" rows="3">
                      </textarea>
                      <label for="message">Your Message</label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-md btn-block ml-0 mb-0">Submit Your Message</button>

                  </div>
                </div>

              </div>
              <div class="col-md-5 offset-md-1 mt-md-4 mb-4 text-white">

                <h5 class="font-weight-bold">Estonia</h5>
                <p class="mb-0">1632 Main Street</p>
                <p class="mb-0">Tallinn, 94126</p>
                <p class="mb-4 pb-2">Estonia</p>

                <h5 class="font-weight-bold">Phone</h5>
                <p class="mb-4 pb-2">+ 01 234 567 89</p>

                <h5 class="font-weight-bold">Email</h5>
                <p>info@pizzamincepie.com</p>

              </div>
            </div>

          </form>

        </div>

      </section>
      <!--Section: Content-->


    </div>

  </body>
</html>
